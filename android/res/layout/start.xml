<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/chooseCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/groupmember_selector"
            android:clickable="false"
            android:ems="10"
            android:gravity="center"
            android:padding="10dp"
            android:text="@string/chooseCategory"
            android:textAllCaps="false"
            android:textSize="18dp"
            android:textStyle="bold" />
        
        <LinearLayout
            android:id="@+id/categoryChoose1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/groupmember_selector"
            android:clickable="true"
            android:orientation="horizontal"
            android:padding="3dp" >

            <ImageView
                android:id="@+id/categoryImageMain1"
                android:layout_width="wrap_content"
                android:layout_height="85dp"
                android:background="@drawable/ausdauer_square"
                android:clickable="false"
                android:focusable="false" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/categoryChoose2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/groupmember_selector"
            android:clickable="true"
            android:orientation="horizontal"
            android:padding="3dp" >

            <ImageView
                android:id="@+id/categoryImageMain2"
                android:layout_width="wrap_content"
                android:layout_height="85dp"
                android:background="@drawable/kraft_square"
                android:clickable="false"
                android:focusable="false" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/categoryChoose3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/groupmember_selector"
            android:clickable="true"
            android:orientation="horizontal"
            android:padding="3dp" >

            <ImageView
                android:id="@+id/categoryImageMain3"
                android:layout_width="wrap_content"
                android:layout_height="85dp"
                android:background="@drawable/ball_square"
                android:clickable="false"
                android:focusable="false" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/categoryChoose4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/groupmember_selector"
            android:clickable="true"
            android:orientation="horizontal"
            android:padding="3dp" >

            <ImageView
                android:id="@+id/categoryImageMain4"
                android:layout_width="wrap_content"
                android:layout_height="85dp"
                android:background="@drawable/gymnastik_square"
                android:clickable="false"
                android:focusable="false" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/categoryChoose5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/groupmember_selector"
            android:clickable="true"
            android:orientation="horizontal"
            android:padding="3dp" >

            <ImageView
                android:id="@+id/categoryImageMain5"
                android:layout_width="wrap_content"
                android:layout_height="85dp"
                android:background="@drawable/leichte_square"
                android:clickable="false"
                android:focusable="false" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>