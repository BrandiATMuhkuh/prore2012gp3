<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dip"
            android:src="@drawable/ausdauer" />

        <Button
            android:id="@+id/ausdauer_down"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/left"
            android:text="" />

        <TextView
            android:id="@+id/ausdauer_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="15h"
            android:textSize="40sp" />

        <Button
            android:id="@+id/ausdauer_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/right"
            android:text="" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dip"
            android:src="@drawable/kraft" />

        <Button
            android:id="@+id/kraft_down"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/left"
            android:text="" />

        <TextView
            android:id="@+id/kraft_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="15h"
            android:textSize="40sp" />

        <Button
            android:id="@+id/kraft_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/right"
            android:text="" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dip"
            android:src="@drawable/ballspiel" />

        <Button
            android:id="@+id/ballspiel_down"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/left"
            android:text="" />

        <TextView
            android:id="@+id/ballspiel_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="15h"
            android:textSize="40sp" />

        <Button
            android:id="@+id/ballspiel_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/right"
            android:text="" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dip"
            android:src="@drawable/gymnastik" />

        <Button
            android:id="@+id/gymnastik_down"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/left"
            android:text="" />

        <TextView
            android:id="@+id/gymnastik_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="15h"
            android:textSize="40sp" />

        <Button
            android:id="@+id/gymnastik_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/right"
            android:text="" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dip"
            android:src="@drawable/leichte" />

        <Button
            android:id="@+id/leichte_down"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/left"
            android:text="" />

        <TextView
            android:id="@+id/leichte_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="15h"
            android:textSize="40sp" />

        <Button
            android:id="@+id/leichte_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/right"
            android:text="" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <TextView
            android:id="@+id/gesamt_label"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="@string/gesamtLabel"
            android:textSize="40sp" />

        <TextView
            android:id="@+id/gesamt_count"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text=""
            android:textSize="40sp" />
    </LinearLayout>

</LinearLayout>