<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="0dip" />

            <gradient
                android:angle="270"
                android:centerColor="@color/progress_background"
                android:centerY="0"
                android:endColor="@color/progress_background"
                android:startColor="@color/progress_background" />
            <stroke
        		android:width="2px"
        		android:color="@color/light_grey" />
        </shape>
    </item>
    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <corners android:radius="0dip" />

                <gradient
                    android:angle="270"
                    android:centerColor="#80ffb600"
                    android:centerY="0.75"
                    android:endColor="#a0ffcb00"
                    android:startColor="#80ffd300" />
            </shape>
        </clip>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="0dip" />

                <gradient
                    android:angle="270"
                    android:centerColor="@color/progress_foreground"
                    android:centerY="@color/progress_foreground"
                    android:endColor="@color/progress_foreground"
                    android:startColor="@color/progress_foreground" />
                <stroke
        		android:width="2px"
        		android:color="@color/light_grey" />
            </shape>
        </clip>
    </item>

</layer-list>